
<div class="jumbotron">
  <div class="container">
    
      <div class="col-lg-6">
        <img src="https://s3.amazonaws.com/marcelandkim/logos/Hampton-Inn-Logo_full.png" alt="Hampton Inn" width="350" height="229" >
        <p>
          <!-- Button trigger modal -->
          <button class="btn btn-info" data-toggle="modal" data-target="#hampton">
            View Details &raquo; 
          </button>
        </p>
      </div>
      
        <!-- Modal -->

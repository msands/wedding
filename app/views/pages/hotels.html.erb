              <p><%= link_to "Hampton Inn - LaGrange", "http://hamptoninn3.hilton.com/en/hotels/georgia/hampton-inn-lagrange-near-callaway-gardens-LAGGAHX/index.html?WT.mc_id=EPEMHXResconfEN", :target => "_blank" %></p>
              <p><%= link_to "Directions from airport", "http://goo.gl/maps/hZnTZ", :target => "_blank" %></p>
              <p><%= link_to "Directions to venue", "http://goo.gl/maps/ShNuI", :target => "_blank" %></p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>
        
      <div class="col-lg-6">

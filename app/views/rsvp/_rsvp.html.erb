
<%= form_for :rsvp do |f| %>
  
  <div class="form-group">
    <%= f.label :guest_name %><br>
    <%= f.text_field :guest_name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :chicken %> <%= f.radio_button :menu_option, 'chicken' %><br>
    <%= f.label :fish %> <%= f.radio_button :menu_option, 'fish' %><br>
    <%= f.label :vegetarian %> <%= f.radio_button :menu_option, 'vegetarian' %><br>
  </div>
  
  <div class="form-group">
    <%= f.label :leave_a_note %><br>
    <%= f.text_area :guest_note, class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Send Rsvp", class: "btn btn-success" %>
  </div>
  
<% end %>

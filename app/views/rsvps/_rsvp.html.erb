
<%= form_for @rsvp do |f| %>
  
  <div class="form-group">
    <%= f.label :guest_name %><br>
    <%= f.text_field :guest_name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.radio_button :menu_option, 'chicken' %> <%= f.label :chicken %><br>
    <%= f.radio_button :menu_option, 'fish' %> <%= f.label :fish %><br>
    <%= f.radio_button :menu_option, 'vegetarian' %> <%= f.label :vegetarian %><br>
  </div>
  
  <div class="form-group">
    <%= f.label :leave_a_note %><br>
    <%= f.text_area :guest_note, class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Send Rsvp", class: "btn btn-success" %>
  </div>
  
<% end %>
